[Unit]
Description=DVD Archive Timer (runs every 30 minutes)
Documentation=https://github.com/mschober/dvd-auto-ripper

[Timer]
# Start 20 minutes after boot (after encoder has had time to run)
OnBootSec=20min

# Run every 30 minutes (archiving is slow, no need to poll frequently)
OnUnitActiveSec=30min

# Add some randomness to avoid thundering herd
RandomizedDelaySec=60

# Persist timer across reboots
Persistent=true

[Install]
WantedBy=timers.target
